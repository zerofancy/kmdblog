<?xml version="1.0" encoding="UTF-8" ?>

<root>
    <!--系统重要路径信息-->
    <path input="./input" output="./output" static="./static" templates="./templates" />

    <!--这里的变量将传递给thymeleaf-->
    <attributes>
        <attr ID="sitename">归零幻想的博客</attr>
        <attr ID="defaultAuthor">归零幻想</attr>
        <!--主页每页显示的item数量-->
        <attr ID="indexSplitItemNum">5</attr>
        <attr ID="rssdescription">一枚准程序猿。</attr>
        <attr ID="siteurl">http://localhost:8080</attr>
    </attributes>
    <!--
    配置不会被自动清理的文件（夹）。
    有时你可能想把输出文件改为根目录，把源码文件等放到子目录。
    此时，因为源码文件没有『依赖』会被自动删除，你可以把他们添加到这里。
    -->
    <noclean>
        <file>/example</file>
    </noclean>
</root>